/**
* Header Section
* @class Header
* @module style.css
*/
.navbar
	background colorHeader
	background-clip padding-box
	border 0
	border-radius 0px
	box-shadow 0px 0px 3px #ccc
	margin 0px
	padding 0em 1em
	.nav
		& > li
			& > a
				color #FFF
				text-shadow none
				&:hover
					color #555
			&:hover
				background-color #e7e7e7

	.dropdown-menu a:hover
		background: none
		color: #000
.navbar-default
	.navbar-brand, .navbar-brand:hover
		color: #fff
.navbar-brand
	font-size 16px
	height auto
	line-height 30px
	padding 8px 15px